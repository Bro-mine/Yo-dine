;;;; MAIN FILE FOR YO-DINE

(FORMAT T "YO-DINE HAS STARTED~%~%")

(DEFVAR NOTES "NOTES.TXT") ; THIS MEANS YOU NEED A FILE NAMED NOTES.TXT IN THE PROJECT'S ROOT DIRECTORY.
(DEFVAR ACTION)

(DEFUN READ-FILE (FILENAME)
  (WITH-OPEN-FILE (STREAM FILENAME)
		  (LOOP FOR LINE = (READ-LINE STREAM NIL)
			WHILE LINE DO (FORMAT T "~A~%" LINE))))

(DEFUN YODINE-MAIN ()
  (FORMAT T "YO-DINE: WHAT DO YOU WANT TO DO FIRST?~%YOU: ")
  (SETQ ACTION (READ-LINE))
  (IF (STRING-EQUAL ACTION "SHOW ME MY NOTES")
      (READ-FILE NOTES)))
 
(YODINE-MAIN)

